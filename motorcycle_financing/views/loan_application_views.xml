<odoo>
    <!-- LIST VIEW (Antes 'tree', ahora 'list' en Odoo 18) -->
    <record id="loan_application_list_view" model="ir.ui.view">
        <field name="name">loan.application.view.list</field>
        <field name="model">loan.application</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="currency_id"/>
                <field name="date_application"/>
                <field name="date_approval"/>
                <field name="date_rejection"/>
                <field name="date_signed"/>
                <field name="down_payment" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                <field name="interest_rate" widget="percentage"/>
                <field name="loan_amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                <field name="loan_term"/>
                <field name="state" widget="badge"/>
                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
            </list>
        </field>
    </record>

    <record id="loan_application_form_view" model="ir.ui.view">
        <field name="name">loan.application.view.form</field>
        <field name="model">loan.application</field>
        <field name="arch" type="xml">
            <form>
                <sheet string="Loan Information">
                    <header>
                        <field name="state" widget="statusbar"/>
                        <group invisible="state not in ('draft')">
                            <button name="action_send_for_approval" type="object" string="Send for Approval"
                                    class="oe_highlight"
                                    invisible="state in ('approved', 'rejected', 'signed')"/>
                        </group>

                        <group invisible="state not in ('sent')">
                            <button name="action_approve_loan" type="object" string="Approve Loan"
                                    class="btn-primary"/>
                        </group>

                        <group invisible="state not in ('sent')">
                            <button name="action_reject_loan" type="object" string="Reject Loan"
                                    class="btn-danger"
                                    confirm="Are you sure you want to reject this loan?"
                                    invisible="state in ('approved', 'signed')"/>
                        </group>
                    </header>

                    <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>

                    <group>
                        <group string="CUSTOMER INFO">
                            <field name="name" widget="text" options="{'line_breaks': False}"
                                   readonly="context.get('state') != 'draft'"/>
                            <field name="sale_order_id"/>
                            <field name="partner_name"/>
                            <field name="date_application"
                                readonly="context.get('state') != 'draft'"/>
                            <field name="date_approval"/>
                            <field name="date_rejection"/>
                            <field name="currency_id"
                                readonly="context.get('state') != 'draft'"/>
                            <field name="date_signed"/>
                            <!--<field name="state" widget="badge"/>-->
                        </group>


                        <group string="LOAN INFO">
                            <field name="sale_order_total"/>
                            <field name="loan_amount" widget="monetary" options="{'currency_field': 'currency_id'}"
                                readonly="context.get('state') != 'draft'"/>
                            <field name="down_payment" widget="monetary" options="{'currency_field': 'currency_id'}"
                                readonly="context.get('state') != 'draft'"/>
                            <field name="interest_rate" widget="percentage"
                                readonly="context.get('state') != 'draft'"/>
                            <field name="loan_term"
                                readonly="context.get('state') != 'draft'"/>
                            <field name="document_count"/>
                            <field name="document_count_approved"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Documents">
                            <field name="document_ids">
                                <list editable="bottom">
                                    <field name="name" readonly="context.get('state') != 'draft'"/>
                                    <field name="type_id" readonly="context.get('state') != 'draft'"/>
                                    <field name="attachment" widget="binary" readonly="context.get('state') != 'draft'"/>
                                    <field name="state" widget="badge"/>
                                    <button name="action_approve_document" type="object"
                                        class="oe_secondary"
                                        icon="fa-check"
                                        invisible="state != 'new'"/>
                                    <button name="action_reject_document" type="object"
                                        class="oe_secondary"
                                        icon="fa-times"
                                        invisible="state != 'new'"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                    <group invisible="state not in ('rejected')">
                        <field name="rejection_reason"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="loan_application_search_view" model="ir.ui.view">
        <field name="name">loan.application.view.search</field>
        <field name="model">loan.application</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="state"/>
                <filter name="draft" string="Draft" domain="[('state','=','draft')]"/>
                <filter name="approved" string="Approved" domain="[('state','=','approved')]"/>
                <filter name="signed" string="Signed" domain="[('state','=','signed')]"/>
            </search>
        </field>
    </record>
</odoo>
